<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.user.Shop_Main">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_key"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:fontFamily="@font/app_sandol_regular"
            android:gravity="center"
            android:text="모두 보기 "
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:layout_width="310dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ic_baseline_search_24"
            android:id="@+id/search_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>
    <View
        android:background="#d3d3d3"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_name"
                    android:fontFamily="@font/app_sandol_regular"
                    android:text="$s"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/app_sandol_regular"
                    android:text="님 안녕하세요!"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </LinearLayout>
                <TextView
                    android:fontFamily="@font/app_sandol_regular"
                    android:layout_marginLeft="20dp"
                    android:text="오늘 예약이"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/today_res"
                    android:fontFamily="@font/app_sandol_regular"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/smalltext_blue"
                    android:text="%d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/app_sandol_regular"
                    android:text="건 있습니다."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/app_sandol_regular"
                    android:text="오늘 샵의 예약"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:fontFamily="@font/app_sandol_regular"
                    android:layout_marginTop="20dp"
                    android:text="오늘의 예약정보는 최대 3건까지 표시 됩니다."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:background="@drawable/thin_outline"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/today_shop_name"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/app_sandol_regular"
                        android:text="예약자 이름"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:background="@color/line_gray"
                        android:layout_width="match_parent"
                        android:layout_height="2px"/>
                    <TextView
                        android:id="@+id/today_menu"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/app_sandol_regular"
                        android:text="예약된 시술(현금)"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:background="@color/line_gray"
                        android:layout_width="match_parent"
                        android:layout_height="2px"/>

                    <TextView
                        android:id="@+id/today_phonenum"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/app_sandol_regular"
                        android:text="예약자 연락처"
                        android:textColor="@color/smalltext_blue"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <View
                    android:layout_marginTop="40dp"
                    android:background="@color/line_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/app_sandol_regular"
                        android:text="이번 주 샵의 예약"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:fontFamily="@font/app_sandol_regular"
                        android:layout_marginTop="20dp"
                        android:text="이번주 예약은 최대 10건까지 표시 됩니다."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <LinearLayout
                        android:background="@drawable/thin_outline"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/recent_shop"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/app_sandol_regular"
                            android:text="예약자 이름"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/line_gray"
                            android:layout_width="match_parent"
                            android:layout_height="2px"/>
                        <TextView
                            android:id="@+id/recent_menu"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/app_sandol_regular"
                            android:text="예약자 시술(카드)"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/line_gray"
                            android:layout_width="match_parent"
                            android:layout_height="2px"/>

                        <TextView
                            android:id="@+id/recent_phonenum"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/app_sandol_regular"
                            android:text="예약자 연락처"
                            android:textColor="@color/smalltext_blue"
                            android:textSize="16sp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View
                        android:layout_marginTop="40dp"
                        android:background="@color/line_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>



                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!--오늘 매출액-->
                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_marginRight="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:fontFamily="@font/app_sandol_regular"
                                android:text="오늘 샵 매출"
                                android:textColor="@color/log_green"
                                android:textSize="25sp" />
                            <LinearLayout
                                android:background="@drawable/thin_outline"
                                android:layout_margin="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:fontFamily="@font/app_sandol_regular"
                                        android:text="현금"
                                        android:textSize="12sp"
                                        android:textColor="@color/black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:fontFamily="@font/app_sandol_regular"
                                        android:layout_marginLeft="10dp"
                                        android:text="100000"
                                        android:textColor="@color/log_green"
                                        android:textSize="12sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <View
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:background="@color/line_gray"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"/>
                                <LinearLayout
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:fontFamily="@font/app_sandol_regular"
                                        android:text="카드"
                                        android:textSize="12sp"
                                        android:textColor="@color/black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:fontFamily="@font/app_sandol_regular"
                                        android:layout_marginLeft="10dp"
                                        android:text="100000"
                                        android:textColor="@color/log_green"
                                        android:textSize="12sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <View
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:background="@color/line_gray"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"/>
                                <LinearLayout
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:fontFamily="@font/app_sandol_regular"
                                        android:text="총계"
                                        android:textSize="12sp"
                                        android:textColor="@color/black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:fontFamily="@font/app_sandol_regular"
                                        android:layout_marginLeft="10dp"
                                        android:text="100000"
                                        android:textColor="@color/log_green"
                                        android:textSize="12sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>



                        </LinearLayout>

                        <!--이번주 매출액-->
                        <LinearLayout
                            android:id="@+id/linearLayout2"

                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity=""
                                android:layout_marginTop="40dp"
                                android:fontFamily="@font/app_sandol_regular"
                                android:text="이번 주 샵 매출"
                                android:textColor="@color/smalltext_blue"
                                android:textSize="25sp" />

                            <LinearLayout
                                android:background="@drawable/thin_outline"
                                android:layout_margin="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:fontFamily="@font/app_sandol_regular"
                                        android:text="현금"
                                        android:textSize="12sp"
                                        android:textColor="@color/black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:fontFamily="@font/app_sandol_regular"
                                        android:layout_marginLeft="10dp"
                                        android:text="100000"
                                        android:textColor="@color/smalltext_blue"
                                        android:textSize="12sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <View
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:background="@color/line_gray"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"/>
                                <LinearLayout
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:fontFamily="@font/app_sandol_regular"
                                        android:text="카드"
                                        android:textSize="12sp"
                                        android:textColor="@color/black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:fontFamily="@font/app_sandol_regular"
                                        android:layout_marginLeft="10dp"
                                        android:text="100000"
                                        android:textColor="@color/smalltext_blue"
                                        android:textSize="12sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <View
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:background="@color/line_gray"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"/>
                                <LinearLayout
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:fontFamily="@font/app_sandol_regular"
                                        android:text="총계"
                                        android:textSize="12sp"
                                        android:textColor="@color/black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:fontFamily="@font/app_sandol_regular"
                                        android:layout_marginLeft="10dp"
                                        android:text="100000"
                                        android:textColor="@color/smalltext_blue"
                                        android:textSize="12sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
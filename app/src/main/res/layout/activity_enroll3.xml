<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_key"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.1"/>
        <TextView
            android:fontFamily="@font/app_sandol_regular"
            android:gravity="center"
            android:text="나의 샵 설정하기"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="15dp"

            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:background="#d3d3d3"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/app_sandol_regular"
                    android:gravity="center"
                    android:text="$s샵"
                    android:textColor="@color/smalltext_blue"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/app_sandol_regular"
                    android:gravity="center"
                    android:text="의 카테고리를 설정합니다."
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/app_sandol_bold"
                        android:text="카테고리 설정하기"
                        android:textColor="@color/black"
                        android:layout_marginRight="10dp"
                        android:textSize="20sp" />

                    <ImageButton
                        android:visibility="invisible"
                        android:backgroundTint="@android:color/transparent"
                        android:id="@+id/btn_rollback"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_refresh"
                        android:textSize="12sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/app_sandol_bold"
                    android:text="최대 3개까지 선택 가능합니다."
                    android:textColor="#999999"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp" />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/ck00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="피부케어" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/ck01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="속눈썹" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/ck02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="네일" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/ck03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="왁싱" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/ck04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="마사지" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/ck05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ETC" />

                <TextView
                    android:id="@+id/selected_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_weight="0.1">
        <Button
            android:enabled="false"
            android:id="@+id/btn_enroll_in"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="다음"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>
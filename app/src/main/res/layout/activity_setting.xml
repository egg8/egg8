<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_key"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:fontFamily="@font/app_sandol_regular"
            android:gravity="center"
            android:text="설정"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_width="310dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ic_baseline_search_24"
            android:id="@+id/search_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>
    <View
        android:background="#d3d3d3"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/ic_baseline_account_circle_24"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:fontFamily="@font/app_sandol_bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:text="나의 계정"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/btn_password_change"
                        android:fontFamily="@font/app_sandol_regular"
                        android:layout_marginBottom="15dp"
                        android:text="비밀번호 변경"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_marginBottom="15dp"
                        android:background="#d3d3d3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:id="@+id/btn_reslist_view"
                        android:fontFamily="@font/app_sandol_regular"
                        android:layout_marginBottom="15dp"
                        android:text="예약내역 보기"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_marginBottom="10dp"
                        android:background="#d3d3d3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:id="@+id/btn_enroll_shop"
                        android:fontFamily="@font/app_sandol_regular"
                        android:layout_marginBottom="15dp"
                        android:text="나의 샵 등록하기"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_marginBottom="10dp"
                        android:background="#d3d3d3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:id="@+id/btn_logout"
                        android:fontFamily="@font/app_sandol_regular"
                        android:layout_marginBottom="15dp"
                        android:text="로그아웃"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_marginBottom="10dp"
                        android:background="#d3d3d3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:id="@+id/btn_withdrawal"
                        android:fontFamily="@font/app_sandol_regular"
                        android:layout_marginBottom="15dp"
                        android:text="회원탈퇴"
                        android:textColor="@color/red"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/ic_baseline_phone_24"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:fontFamily="@font/app_sandol_bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:text="고객센터"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/app_sandol_regular"
                        android:layout_marginBottom="15dp"
                        android:text="공지사항"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_marginBottom="15dp"
                        android:background="#d3d3d3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:fontFamily="@font/app_sandol_regular"
                        android:layout_marginBottom="15dp"
                        android:text="문의하기"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_marginBottom="10dp"
                        android:background="#d3d3d3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:fontFamily="@font/app_sandol_regular"
                        android:layout_marginBottom="15dp"
                        android:text="신고하기"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>